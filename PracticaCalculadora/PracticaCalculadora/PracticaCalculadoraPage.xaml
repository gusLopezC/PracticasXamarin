	<StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Ingrese primer numero"></Label>
        <Entry x:Name="n1" Keyboard="Numeric"></Entry>
        <Label Text="Ingrese segundo numero"></Label>
        <Entry  x:Name="n2" Keyboard="Numeric"></Entry>
       
